{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/webcompose/manage.py",
      "args": [
        "runserver"
      ],
      "django": true
    },
    {
      "name": "Python: gunicorn",
      "type": "python",
      "request": "launch",
      "cwd": "/${workspaceFolder}/webcompose",
      "program": "/usr/local/bin/gunicorn",
      "args": [
        "webcompose.wsgi:application",
        "--bind=0.0.0.0:8000",
        "--timeout=300",
        "--reload",
        "--workers=3"
      ],
    },
    {
      "name": "poetry: gunicorn",
      "type": "python",
      "request": "launch",
      "cwd": "/${workspaceFolder}/webcompose",
      // "module": "poetry",
      "program": "/${workspaceFolder}/.venv/bin/gunicorn",
      "args": [
        // "run",
        // "gunicorn",
        "webcompose.wsgi:application",
        "--bind=0.0.0.0:8000",
        "--timeout=300",
        "--reload",
        "--workers=3",
      ],
      "envFile": "${workspaceFolder}/.env.dev"
    },
    {
      "name": "poetry: Django",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/webcompose/manage.py",
      "args": [
        "runserver",
        "0.0.0.0:8000"
      ],
      "django": true
    },
  ]
}